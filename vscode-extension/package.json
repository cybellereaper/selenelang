{
  "name": "selene-lang-support",
  "displayName": "Selene Language Support",
  "description": "Language server, syntax highlighting, and workspace commands for the Selene programming language.",
  "version": "0.1.0",
  "publisher": "selene-lang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/selene-lang/selenelang.git"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:selene",
    "onCommand:selene.restartLanguageServer"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "selene",
        "aliases": ["Selene", "selene"],
        "extensions": [".selene"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "selene",
        "scopeName": "source.selene",
        "path": "./syntaxes/selene.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Selene",
      "properties": {
        "selene.languageServerPath": {
          "type": "string",
          "default": "selene",
          "description": "Command used to launch the Selene language server."
        },
        "selene.languageServerArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "lsp"
          ],
          "description": "Arguments passed to the language server command."
        },
        "selene.languageServerEnv": {
          "type": "object",
          "default": {},
          "description": "Additional environment variables for the language server process."
        }
      }
    },
    "commands": [
      {
        "command": "selene.restartLanguageServer",
        "title": "Selene: Restart Language Server"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "compile": "vsce package --out dist/selene-lang-support.vsix",
    "package": "npm run clean && node -e \"require('fs').mkdirSync('dist', { recursive: true })\" && npm run compile",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
