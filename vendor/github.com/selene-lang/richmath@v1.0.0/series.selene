package richmath;

fn sum(values: Array): Number {
    var total = 0;
    for (let i = 0; i < values.length; i += 1) {
        total += values[i];
    }
    return total;
}

fn average(values: Array): Number {
    if values.length == 0 {
        return 0;
    }
    return sum(values) / values.length;
}

module stats {
    fn runningMean(values: Array): Number {
        var rolling = 0;
        for (let i = 0; i < values.length; i += 1) {
            rolling += (values[i] - rolling) / (i + 1);
        }
        return rolling;
    }
}
